{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "inlineSources": true,
    "outDir": "dist",
    "rootDir": ".",
    "composite": true,
    "sourceMap": true,
    "sourceRoot": "/",

    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "references": [{ "path": "./src" }, { "path": "./builder" }, { "path": "./test" }],
  "files": []
}
